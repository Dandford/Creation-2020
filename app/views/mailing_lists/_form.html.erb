<style>
  .centralize {
    text-align: center;
  }

  .hide-label {
    display: none;
  }

  .submit-button {
    text-align: center;
    padding-bottom: 10%;
  }

  .button {
    font-family: "Raleway";
    background-color: #111f36;
    border: none;
    color: white;
    text-align: center;
    letter-spacing: 2px;
    padding-top: 7px;
    padding-bottom: 7px;
    padding-left: 21px;
    padding-right: 21px;
  }

  input[type=text] {
    width: 450px;
    border: 2px solid #111f36;
    border-radius: 0px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    font-family: "Raleway";
    font-weight: bold;
    letter-spacing: 2px;
    margin-left: 7%;
  }

  img {
    position: absolute;
  }

  .custom-form {
    text-align: left;
  }
</style>

<div class="container centralize">
<%= form_with(model: @mailing_list, local: true) do |form| %>

  <div class="custom-form">
    <div class="field asterisk">
      <%= form.label :email, class: 'hide-label' %>
      <%= image_tag("logo-email.png", height: "40px") %>
    </div>

    <div>
      <%= form.text_field :email, class: 'form-control', placeholder: "Email" %>
      <% if @mailing_list.errors.any? && @mailing_list.errors.include?(:email) %>
        <div class="invalid-feedback d-block">
          <%  @mailing_list.errors.messages[:email].each do |error| %>
            <% error.insert(0, "Email ") %>
          <% end %>
          <%=  @mailing_list.errors.messages[:email].join(", ") %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="actions pt-3 submit-button">
    <%= form.submit "SUBMIT", class: 'button' %>
  </div>

<% end %>
</div>
