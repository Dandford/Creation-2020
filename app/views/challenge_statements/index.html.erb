<p id="notice"><%= notice %></p>

<h1>Challenge Statements</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenge_statements.each do |challenge_statement| %>
      <tr>
        <td><%= challenge_statement.title %></td>
        <td><%= challenge_statement.description %></td>
        <td><%= link_to 'Show', challenge_statement %></td>
        <% if user_signed_in? %>
          <% if current_user.admin %>
              <td><%= link_to 'Edit', edit_challenge_statement_path(challenge_statement) %></td>
              <td><%= link_to 'Destroy', challenge_statement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <% if current_user.admin %>
    <%= link_to 'New Challenge Statement', new_challenge_statement_path %>
  <% end %>
<% end %>