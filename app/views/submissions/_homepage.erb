<table>
  <thead>
  <tr>
    <th>File</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @submissions.each do |submission| %>
    <tr>
      <td> <%= link_to submission.file.filename, rails_blob_path(submission.file, disposition: 'attachment') %></td>
      <td><%= submission.user.email %></td>
      <td><%= button_to 'Show', challenge_statement_submission_path(@challenge_statement, submission), :method => :get %></td>
      <% if !current_user.admin %>
        <td><%= link_to 'Edit',  edit_challenge_statement_submission_path(@challenge_statement, submission) %></td>
        <td><%= link_to 'Destroy', challenge_statement_submission_path(@challenge_statement, submission), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<% if current_user.admin %>
  <h3>User that has joined but haven't submitted</h3>
  <table>
    <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @not_submitted_user.each do |user| %>
      <tr>
        <td><%= user.email %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>


<br>

<% if user_signed_in? %>
  <% if !@submissions.any?{|submission| submission.user_id == current_user.id } && !current_user.admin && @challenge_statement.id.in?(current_user.joined_challenge_statement) %>
    <%= link_to 'Add a Submission',  new_challenge_statement_submission_path(@challenge_statement) %>
  <% end %>
<% end %>